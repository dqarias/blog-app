<p class="user-title">List of Users:</p>
<% @users.each do |user|%>
<article class="users__container">
<img class="users__image" src=<%= image_path(user.photo) %>>
<div class="users__info">
    <p class="users__name"><%= user.name %></p>
    <p class="users__post-number">Number of posts: <%= user.posts_counter %></p>
</div>
</article>
<%end%>