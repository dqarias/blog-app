<h1>New Post</h1>
<%= @params_create %>
<%= form_with model: @new_post, url: user_posts_path, method: :post, scope: :post do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :text %>
        <%= form.text_field :text %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>